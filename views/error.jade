doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= title
    link(rel='stylesheet', href='/stylesheets/frameworks/bulma.css')
    link(rel='stylesheet', href='/stylesheets/custom-styles/error-page.css')
    link(rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico")
  body
    div.modal.is-active
      div.modal-content
        article.message
          div.message-header
            h1.title= message
          div.message-body
            h2.subtitle= error.status
            pre #{error.stack}
            a.button.is-link.is-inverted.is-outlined(onclick='window.location = \'/\'') go to main page